{
  "openapi": "3.0.0",
  "info": {
    "title": "Delivery APP API",
    "description": "description",
    "termsOfService": "http://localhost/3001",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "description": "Use to login",
        "tags": ["Login"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "A successful login response",
            "content": {
              "application/json": {
                "examples": {
                  "Login Response": {
                    "value": {
                      "name": "Jane Doe",
                      "email": "jane@doe.com",
                      "role": "user role",
                      "token": "user token"
                    }
                  }
                },
                "schema": {
                  "$ref": "#/components/schemas/Login Response"
                }
              }
            }
          },
          "404": {
            "description": "Invalid data used for login"
          }
        },
        "requestBody": {
          "required": "true",
          "content": {
            "application/json": {
              "examples": {
                "User Login": {
                  "value": {
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              },
              "schema": {
                "$ref": "#/components/schemas/User Login"
              }
            }
          }
        }
      }
    },
    "/register": {
      "post": {
        "description": "Use to register a new user",
        "tags": ["Register"],
        "responses": {
          "201": {
            "description": "A new user was successfully created response"
          },
          "409": {
            "description": "Invalid data used for register a new user"
          } 
        },
        "requestBody": {
          "required": "true",
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/New User"
              },
              "examples": {
                "New User": {
                  "value": {
                    "name": "Jane Doe",
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customer/products": {
      "get": {
        "description": "Route to get and list all the products",
        "tags": ["Customer"],
        "responses": {
          "200": {
            "description": "Return a list of products",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Products List"
                }
              }
            }
          },
          "404": {
            "description": "No products list was found"
          }
        }
      }
    },
    "/customer/orders": {
      "post": {
        "description": "Route to register a new order",
        "tags": ["Customer"],
        "responses": {
          "201": {
            "description": "A new order was created"
          }
        }
      }
    },
    "/customer/orders/{id}": {
      "get": {
        "description": "Route to get a order by ID",
        "tags": ["Customer"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Products name by ID",
            "required": "true"
          }
        ],
        "responses": {
          "200": {
            "description": "Order successfully returned"
          }
        }
      }
    },
    "/admin": {
      "post": {
        "description": "Route administrator users to register a new user",
        "tags": ["Admin"],
        "responses": {
          "201": {
            "description": "A new user was created"
          },
          "409": {
            "description": "Invalid data used for register a new user"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/New User"
              },
              "examples": {
                "New User": {
                  "value": {
                    "name": "Jane Doe",
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              }
            }
          },
          "required": "true"
        }
      }
    }    
  },
  "components": {

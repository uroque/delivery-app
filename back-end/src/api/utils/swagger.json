{
  "openapi": "3.0.0",
  "info": {
    "title": "Delivery APP API",
    "description": "description",
    "termsOfService": "http://localhost/3001",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "description": "Use to login",
        "responses": {
          "200": {
            "description": "A successful login response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLoginResponse"
                },
                "examples": {
                  "user": {
                    "value": {
                      "name": "Jane Doe",
                      "email": "jane@doe.com",
                      "role": "user role",
                      "toke": "user token"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Invalid data used for login"
          }
        },
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              }
            }
          },
          "required": "true"
        }
      }
    },
    "/register": {
      "post": {
        "description": "Use to register a new user",
        "responses": {
          "201": {
            "description": "A new user was successfully created response"
          },
          "409": {
            "description": "Invalid data used for register a new user"
          } 
        },
        "tags": ["Register"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/NewUser"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "Jane Doe",
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              }
            }
          },
          "required": "true"
        }
      }
    },
    "/customer/orders/:id": {
      "post": {
        "description": "Route to register a new order",
        "responses": {
          "201": {
            "description": "A new order was created"
          }
        },
        "tags": ["Customer"]
      }
    },
    "/admin": {
      "post": {
        "description": "Route administrator users to register a new user",
        "responses": {
          "201": {
            "description": "A new user was created"
          },
          "409": {
            "description": "Invalid data used for register a new user"
          }
        },
        "tags": ["Admin"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/NewUser"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "Jane Doe",
                    "email": "jane@doe.com",
                    "password": "myPassword"
                  }
                }
              }
            }
          },
          "required": "true"
        }
      }
    }    
  },
  "components": {
    "schemas": {
      "UserLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type":"string"
          }
        }
      },
      "UserLoginResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}
